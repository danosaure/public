{
    "name": "Cengage.Outline.Speech",
    "displayName": "Speech Outline Tool",
    "version": "0.5",
    "creator": "Cengage Learning",

    "rootURI": "http://localhost:8088",
    "helpURI": "/help.html",

    "dockItems": {
        "SOT": {
            "label": "Speech Outlining Tool",
            "icon": "/img/dockItem.png",
            "supportsMobile": false,
            "action": {
                "uri": "/mindtap/lti/dockItem",
                "width": 1024
            },
            "parameters": {
                "outlineType": "speech"
            }
        }
    },

    "activities": {
        "SOT": {
            "displayName": "Speech Outlining Tool",
            "description": "Speech Outlining Tool - not editable once student starts",
            "icon": "/img/dockItem.png",
            "category": "assignment",
            "placement": "DISTINCT",
            "titleEditable": false,
            "supportsMobile": true,
            "add": {
                "uri": "/mindtap/lti/addActivity",
                "roles": ["SUPER_ADMIN", "INSTRUCTOR", "PRODUCTION", "VENDOR", "COURSECARE"]
            },
            "parameters": {
                "outlineType": "speech"
            }
        }
    },

    "lifecycle": {
        "notification": {
            "uri": "http://localhost:8088/mindtap/lifecycle",
            "subscriptionEvents": [
                "APP_ADDED",
                "APP_REMOVED",
                "ACTIVITY_ADDED",
                "ACTIVITY_CHANGED",
                "COURSE_CHANGED",
                "ACTIVITY_REMOVED",
                "WORKING_COPY_COMMIT"
            ]
        }
    }
}

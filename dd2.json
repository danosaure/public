{
    "name": "Cengage.Outline.Speech.htran",
    "displayName": "Speech Outline Tool",
    "version": "0.20",
    "creator": "Cengage Learning",

    "rootURI": "http://localhost:8088/sot",
    "helpURI": "/help.html",

    "features": {
        "supportsTARole": false
    },

    "dockItems": {
        "SOT": {
            "label": "Speech Outlining Tool",
            "icon": "/img/dockItem.png",
            "supportsMobile": false,
            "action": {
                "uri": "/lti",
                "roles": ["SUPER_ADMIN", "INSTRUCTOR", "PRODUCTION", "VENDOR", "COURSECARE", "TEACHING_ASSISTANT"]
            },
            "parameters": {
                "i_am_in": "dockItems.SOT"
            }
        }
    },

    "activities": {
        "SOT": {
            "displayName": "Speech Outlining Tool",
            "description": "Speech Outlining Tool - not editable once student starts",
            "icon": "/img/dockItem.png",
            "category": "assignment",
            "placement": "DISTINCT",
            "titleEditable": false,
            "supportsMobile": true,
            "add": {
                "uri": "/lti",
                "roles": ["SUPER_ADMIN", "INSTRUCTOR", "PRODUCTION", "VENDOR", "COURSECARE", "TEACHING_ASSISTANT"],
                "parameters": {
                    "i_am_in": "activities.SOT.add"
                }
            },
            "view": {
                "uri": "/lti",
                "parameters": {
                    "i_am_in": "activities.SOT.view"
                }
            },
            "configure": {
                "uri": "/lti",
                "parameters": {
                    "i_am_in": "activities.SOT.configure"
                }
            },
            "grade": {
                "uri": "/lti",
                "parameters": {
                    "i_am_in": "activities.SOT.grade"
                }
            }
        }
    }
}

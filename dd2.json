{
    "name": "Cengage.Outline.Speech.htran",
    "displayName": "Speech Outline Tool",
    "version": "0.22",
    "creator": "Cengage Learning",

    "rootURI": "http://localhost:8088/sot",
    "helpURI": "/help",

    "features": {
        "supportsTARole": false
    },

    "dockItems": {
        "SOT": {
            "label": "Speech Outlining Tool",
            "icon": "/img/dockItem.png",
            "supportsMobile": false,
            "action": {
                "uri": "/lti",
                "roles": [
                    "SUPER_ADMIN",
                    "INSTRUCTOR",
                    "PRODUCTION",
                    "VENDOR",
                    "COURSECARE",
                    "TEACHING_ASSISTANT"
                ]
            },
            "parameters": {
                "i_am_in": "dockItems"
            }
        }
    },

    "activities": {
        "SOT": {
            "displayName": "Speech Outlining Tool",
            "description": "Speech Outlining Tool - not editable once student starts",
            "icon": "/img/dockItem.png",
            "category": "assignment",
            "placement": "DISTINCT",
            "titleEditable": false,
            "supportsMobile": true,
            "add": {
                "uri": "/lti",
                "roles": [
                    "SUPER_ADMIN",
                    "INSTRUCTOR",
                    "PRODUCTION",
                    "VENDOR",
                    "COURSECARE",
                    "TEACHING_ASSISTANT"
                ],
                "parameters": {
                    "i_am_in": "activities.add"
                }
            },
            "view": {
                "uri": "/lti",
                "parameters": {
                    "i_am_in": "activities.view"
                }
            },
            "configure": {
                "uri": "/lti",
                "parameters": {
                    "i_am_in": "activities.configure"
                }
            },
            "grade": {
                "uri": "/lti",
                "parameters": {
                    "i_am_in": "activities.grade"
                }
            }
        }
    }
}
